# Database Connection
DATABASE_URL=postgres://user:password@your_staging_db_host:5432/medusa-store
DATABASE_TYPE=postgres

# Redis (optional for caching and background jobs)
REDIS_URL=redis://your_staging_redis_host:6379

# CORS (Cross-Origin Resource Sharing)
STORE_CORS=http://your-staging-storefront.com
ADMIN_CORS=http://your-staging-admin.com

# Secrets
JWT_SECRET=your_very_secret_jwt_key_staging
COOKIE_SECRET=your_very_secret_cookie_key_staging

# Medusa Admin (optional for development)
OPEN_BROWSER=false

# Other Options
JOBS_BATCH_SIZE=100 